{
  "name": "reclare",
  "description":
    "Declarative state management library for React built on top of the Context Api",
  "author": "Oguz Gelal <o.gelal77@gmail.com> (https://oguzgelal.com/)",
  "license": "MIT",
  "version": "0.0.1",
  "main": "dist/reclare.js",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-check-es2015-constants": "^6.3.13",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-jsx": "^6.3.13",
    "babel-plugin-transform-decorators-legacy": "^1.2.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.3.13",
    "babel-plugin-transform-es2015-block-scoped-functions": "^6.3.13",
    "babel-plugin-transform-es2015-block-scoping": "^6.26.0",
    "babel-plugin-transform-es2015-classes": "^6.3.13",
    "babel-plugin-transform-es2015-computed-properties": "^6.3.13",
    "babel-plugin-transform-es2015-destructuring": "^6.3.13",
    "babel-plugin-transform-es2015-for-of": "^6.3.13",
    "babel-plugin-transform-es2015-function-name": "^6.3.13",
    "babel-plugin-transform-es2015-literals": "^6.3.13",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-es2015-object-super": "^6.3.13",
    "babel-plugin-transform-es2015-parameters": "^6.3.13",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.3.13",
    "babel-plugin-transform-es2015-spread": "^6.3.13",
    "babel-plugin-transform-es2015-sticky-regex": "^6.3.13",
    "babel-plugin-transform-es2015-template-literals": "^6.3.13",
    "babel-plugin-transform-es2015-unicode-regex": "^6.3.13",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-display-name": "^6.4.0",
    "babel-plugin-transform-react-jsx": "^6.4.0",
    "cross-env": "^5.1.4",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "prettier": "1.12.1",
    "react": "^16.3.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "rand": "openssl rand -base64 16 | cut -c 1-14 | tr -d '\n' | pbcopy",
    "build:commonjs":
      "cross-env BABEL_ENV=commonjs babel src --out-dir dist/cjs",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir dist/es",
    "build:umd": "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c",
    "build:umd:min": "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c",
    "build":
      "npm run clean && npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min && rimraf dist/es dist/cjs",
    "prettier":
      "./node_modules/.bin/prettier --config .prettierrc --write src/**/*.js",
    "clean": "rimraf dist"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["npm run prettier", "git add"]
  },
  "files": ["dist"]
}
